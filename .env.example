# =====================================================
# HEKAYATY StoryWeaveConnect - Environment Variables
# =====================================================
# Copy this file to .env and fill in your actual values

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Get these from your Supabase project dashboard

# Supabase Project URL (https://your-project.supabase.co)
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (public key for client-side)
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Service Role Key (private key for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase JWT Secret (for token verification)
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Supabase Database URL (for direct database connections)
SUPABASE_DB_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# =====================================================
# CLOUDINARY CONFIGURATION
# =====================================================
# Get these from your Cloudinary dashboard

# Cloudinary Cloud Name
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name

# Cloudinary API Key (public)
VITE_CLOUDINARY_API_KEY=123456789012345

# Cloudinary API Secret (private - server-side only)
CLOUDINARY_API_SECRET=your-api-secret-here

# Cloudinary Upload Preset (for unsigned uploads)
VITE_CLOUDINARY_UPLOAD_PRESET=storyweave_uploads

# Cloudinary Folder for organizing uploads
VITE_CLOUDINARY_FOLDER=storyweave

# =====================================================
# HEKAYATY INTEGRATION
# =====================================================
# Integration with main HEKAYATY platform

# HEKAYATY API Base URL
HEKAYATY_API_URL=https://api.hekayaty.com

# HEKAYATY API Key for server-to-server communication
HEKAYATY_API_KEY=your-hekayaty-api-key

# HEKAYATY JWT Secret for token verification
HEKAYATY_JWT_SECRET=your-hekayaty-jwt-secret

# HEKAYATY User Service URL
HEKAYATY_USER_SERVICE_URL=https://users.hekayaty.com

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URL
VITE_APP_URL=http://localhost:5173

# API Base URL
VITE_API_URL=http://localhost:5000

# =====================================================
# FILE UPLOAD SETTINGS
# =====================================================

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=10485760

# Allowed file types for artwork uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Allowed file types for document uploads
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# =====================================================
# SECURITY SETTINGS
# =====================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://hekayaty.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session settings
SESSION_SECRET=your-session-secret-here
SESSION_MAX_AGE=86400000

# =====================================================
# EMAIL CONFIGURATION (Optional)
# =====================================================

# Email service provider
EMAIL_PROVIDER=sendgrid

# SendGrid API Key
SENDGRID_API_KEY=your-sendgrid-api-key

# From email address
FROM_EMAIL=noreply@hekayaty.com

# =====================================================
# ANALYTICS & MONITORING (Optional)
# =====================================================

# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =====================================================
# FEATURE FLAGS
# =====================================================

# Enable/disable features
ENABLE_REAL_TIME_CHAT=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_WORKSHOPS=true
ENABLE_BOOK_CLUBS=true
ENABLE_ART_GALLERY=true
